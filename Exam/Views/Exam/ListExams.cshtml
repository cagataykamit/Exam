@model IEnumerable<Exam.Models.ExamDefAdminViewModel>

@{
    Layout = "_LayoutUser";
    ViewData["Title"] = "UserListExams";
}

<h1>Sınav Listesi</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.ActionLink("Sınava Gir", "TakeExam", new { id = item.Id })
            </td>
        </tr>
}
    </tbody>
</table>
